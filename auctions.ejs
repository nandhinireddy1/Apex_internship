<!-- views/auctions.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Auctions</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="navbar">
    <h2>Online Auction Platform</h2>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/logout">Logout</a>
    </div>
  </div>

  <div class="container">
    <h1>Live Auctions</h1>
    <% if (auctions.length === 0) { %>
      <p>No auctions available currently.</p>
    <% } else { %>
      <div class="auction-list">
        <% auctions.forEach(a => { %>
          <div class="auction-card">
            <h3><%= a.title %></h3>
            <p><strong>Price:</strong> â‚¹<%= a.price %></p>
            <p><%= a.description %></p>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
